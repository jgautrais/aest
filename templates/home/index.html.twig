{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<header class="text-center font-bold mt-8 mb-12">
		<h1 class="text-4xl sm:text-5xl text-gray-700">Aest</h1>
		<h2 class="mt-3 text-lg sm:text-xl text-gray-400">
			Area estimation tool
		</h2>
	</header>

	<main class="flex-grow max-w-2xl w-full flex flex-col md:flex-row items-center md:justify-around md:items-start">
		<div class="border-2 border-black">
			<table class="area_container w-full h-full" cellspacing="0" cellpadding="0" id="areaContainer"></table>
		</div>

		<div class="board_container mt-6 md:mt-0 flex flex-col items-center bg-red-500">
			<div class="my-3">
				<button type="button" class="text-sm text-white bg-black px-4 py-3" id="startButton">
					Start Game !
				</button>
			</div>
			<form id="inputForm" class="text-sm flex flex-col items-center mt-4">
				<label for="inputValue">Blackened area in %:</label>
				<input type="text" inputmode="numeric" pattern="[0-9]*" id="inputValue" class="mt-3 mb-4 bg-gray-100 text-center py-2 px-2 w-16 rounded" disabled/>
				<input type="submit" value="Submit" id="inputSubmit" class="text-sm text-white bg-gray-200 px-3 py-2 cursor-pointer" disabled/>
			</form>
			<div id="boardScore" class="hidden text-sm mt-6 py-2 px-4 bg-white">
				<p>
					<span class="inline-block w-36">Your estimate :
					</span>
					<b id="scoreEstimate"></b>
					%
				</p>
				<p>
					<span class="inline-block w-36">Actual is :
					</span>
					<b id="scoreTarget"></b>
					%
				</p>
			</div>
		</div>
	</main>

	<footer class="text-center text-gray-400 text-xs my-6">
		<p class="mb-2">
			Coded by
			<a class="text-blue-400 hover:underline" href="https://www.jeremygautrais.fr/">Jérémy</a>
		</p>
		<p>
			Source code on
			<a class="text-blue-400 hover:underline" href="https://github.com/jgautrais/aest/tree/main">Github</a>
		</p>
	</footer>
</body>{% endblock %}
